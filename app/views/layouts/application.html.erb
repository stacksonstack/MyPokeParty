<!DOCTYPE html>
<html>
  <head>
    <title>MyPokeParty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
    <h4>My Poke Party!</h4>
    <ul class="nav">
      <li><a href="<%= pokemons_path %>">Pokemon</a></li>
      <li><a href="<%= users_path %>">Trainers</a></li>

      <% if @current_user %>
        <li class="right">Welcome <%= @current_user.username %>!</li>
        <li class="right"><%= link_to "Log Out", logout_path, method: :delete %></li>
      <% else %>
        <li class="right"><a href="<%= new_user_path %>">Sign Up!</a></li>
        <li class="right"><a href="<%= new_login_path %>">Login!</a></li>
      <% end %>
    </ul>

    <%= yield %>
  </body>
</html>